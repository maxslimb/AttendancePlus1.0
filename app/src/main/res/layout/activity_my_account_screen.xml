<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my_account_screen">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:src="@drawable/call_rejection_back_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/myac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="4dp"
                android:text="My Account"
                android:textSize="30dp"
                android:textColor="#52ACFF"
                app:layout_constraintStart_toEndOf="@+id/back"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/edittextborder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/myac"
                android:hint="Name"
                android:importantForAutofill="auto"
                android:inputType="textPersonName" />
            <ImageView
                android:id="@+id/pen1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:src="@drawable/pen"
                app:layout_constraintBottom_toBottomOf="@+id/name1"
                app:layout_constraintEnd_toEndOf="@+id/name1"
                app:layout_constraintTop_toTopOf="@id/name1" />

            <EditText
                android:id="@+id/email1"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/edittextborder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name1"
                android:hint="Email Address"
                android:inputType="textWebEmailAddress" />
            <ImageView
                android:id="@+id/pen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:src="@drawable/pen"
                app:layout_constraintBottom_toBottomOf="@+id/email1"
                app:layout_constraintEnd_toEndOf="@+id/email1"
                app:layout_constraintTop_toTopOf="@id/email1" />

            <EditText
                android:id="@+id/dob1"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/edittextborder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email1"
                android:hint="Admission Number"
                android:inputType="date" />

            <ImageView
                android:id="@+id/dobicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:src="@drawable/pen"
                app:layout_constraintBottom_toBottomOf="@+id/dob1"
                app:layout_constraintEnd_toEndOf="@+id/dob1"
                app:layout_constraintTop_toTopOf="@id/dob1" />

            <EditText
                android:id="@+id/grade1"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/edittextborder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dob1"
                android:hint="Class"
                android:inputType="text" />

            <ImageView
                android:id="@+id/pen3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:src="@drawable/pen"
                app:layout_constraintBottom_toBottomOf="@+id/grade1"
                app:layout_constraintEnd_toEndOf="@+id/grade1"
                app:layout_constraintTop_toTopOf="@id/grade1" />

            <EditText
                android:id="@+id/institution1"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/edittextborder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/grade1"
                android:hint="Division"
                android:inputType="text" />

            <ImageView
                android:id="@+id/pen4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:src="@drawable/pen"
                app:layout_constraintBottom_toBottomOf="@+id/institution1"
                app:layout_constraintEnd_toEndOf="@+id/institution1"
                app:layout_constraintTop_toTopOf="@id/institution1" />



            <ImageButton
                android:id="@+id/save"
                android:layout_width="99dp"
                android:layout_height="40dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/roundedbutton3"
                android:src="@drawable/myaccount_save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/institution1"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
